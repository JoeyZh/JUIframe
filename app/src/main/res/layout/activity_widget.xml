<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TableRow>

            <TextView android:text="文字按钮" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Borderless" />
        </TableRow>

        <TableRow>

            <TextView android:text="文字彩色按钮" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Borderless colored" />
        </TableRow>

        <TableRow>

            <TextView android:text="不可用按钮" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="enable false" />
        </TableRow>

        <TableRow>

            <TextView android:text="按钮" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="normal Button" />
        </TableRow>

        <TableRow>

            <TextView android:text="单选框" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="normal checkBox" />
        </TableRow>

        <TableRow>

            <TextView android:text="开关" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="开关" />
        </TableRow>

        <TableRow>

            <TextView android:text="复选框" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="radio 1" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="radio 2" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="radio 3" />

            </RadioGroup>
        </TableRow>

        <TableRow>

            <TextView android:text="加载" />

            <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow>

            <TextView android:text="进度条" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp" />
        </TableRow>

        <TableRow>

            <TextView android:text="文本框" />

            <com.joey.ui.widget.ClearableEditText
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:background="@drawable/abc_edit_text_material"
                app:cleanIcon="@drawable/ic_delete"
                android:hint="Active EditText" />
        </TableRow>
    </TableLayout>
</ScrollView>